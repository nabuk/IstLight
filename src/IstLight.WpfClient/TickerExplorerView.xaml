<UserControl x:Class="IstLight.TickerExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:IstLight"
             xmlns:helpers="clr-namespace:IstLight.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="300"
             Background="{StaticResource NormalBrush}">
    <DockPanel>
        <ContentPresenter Content="{Binding Providers}" DockPanel.Dock="Top" Margin="10" />
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl
                ItemsSource="{Binding Tickers}"
                helpers:ItemsControlHelper.AutoScrollToEnd="true"
                Background="{StaticResource LightBrush}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentPresenter Content="{Binding}" Margin="2,2,2,0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
